/frontend
  ├── public/
  ├── src/
  │   ├── components/       # Reusable UI pieces like PostCard, Tag, ReflectButton
  │   ├── pages/            # Home, PostStream, NewThought
  │   ├── hooks/            # Custom hooks (useStream, useTags)
  │   ├── utils/            # Helpful nonsense
  │   ├── assets/           # Tea-themed SVGs probably
  │   └── App.tsx          # Root component
  ├── tailwind.config.js
  ├── index.html
  └── package.json
npm create vite@latest frontend -- --template react
cd frontend
npm install
npm install -D tailwindcss postcss autoprefixer
npx tailwindcss init -p
